{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <h1 class="text-xl font-bold text-gray-800">User Management</h1>
                <div class="flex items-center gap-4">
                    <span class="text-gray-600">{{ app.user.name }}</span>
                    <a href="{{ path('logout') }}" class="text-red-500 hover:text-red-700 font-medium group">
                        Logout <i class="fas fa-sign-out-alt group-hover:translate-x-1 transition"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="mb-4 flex justify-between items-center">
            <div class="text-sm text-gray-600">
                Showing {{ ((page - 1) * perPage + 1) }} to {{ min(page * perPage, total) }} of {{ total }} users
            </div>
            <div class="flex items-center gap-2">
                <label for="perPage" class="text-sm text-gray-600">Show:</label>
                <select id="perPage" name="perPage" class="border border-gray-300 rounded px-3 py-1 text-sm" onchange="changePerPage(this.value)">
                    <option value="5" {{ perPage == 5 ? 'selected' : '' }}>5</option>
                    <option value="10" {{ perPage == 10 ? 'selected' : '' }}>10</option>
                    <option value="25" {{ perPage == 25 ? 'selected' : '' }}>25</option>
                    <option value="50" {{ perPage == 50 ? 'selected' : '' }}>50</option>
                    <option value="100" {{ perPage == 100 ? 'selected' : '' }}>100</option>
                </select>
            </div>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <dialog id="confirmModal" class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rounded-lg shadow-xl p-5 w-96 backdrop:bg-black backdrop:opacity-50">
            <div class="text-center">
                <div id="modalIcon" class="mx-auto flex items-center justify-center h-12 w-12 rounded-full">
                    <i id="modalIconElement" class="text-xl"></i>
                </div>
                <h3 id="modalTitle" class="text-lg leading-6 font-medium text-gray-900 mt-4"></h3>
                <p id="modalMessage" class="text-sm text-gray-500 mt-2 px-4"></p>
                <div class="flex gap-3 mt-6">
                    <button onclick="closeModal()" class="flex-1 px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">
                        Cancel
                    </button>
                    <button id="modalConfirmBtn" onclick="confirmAction()" class="flex-1 px-4 py-2 text-white rounded-md">
                        Confirm
                    </button>
                </div>
            </div>
        </dialog>

        <div class="bg-white rounded-lg shadow">
            <form id="userForm" method="post" action="{{ path('users_bulk_action') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('bulk_action') }}">
                <input type="hidden" id="confirmAction" name="action" value="">

                <div class="p-4 border-b border-gray-200 flex gap-2">
                    <button type="button" onclick="showConfirmModal('block')" title="Block selected users"
                            class="px-4 py-2 border-2 border-yellow-500 text-yellow-500 rounded hover:border-yellow-600 hover:text-yellow-600 transition">
                        <i class="fas fa-ban"></i>
                    </button>
                    <button type="button" onclick="showConfirmModal('unblock')" title="Unblock selected users"
                            class="px-4 py-2 border-2 border-green-500 text-green-500 rounded hover:border-green-600 hover:text-green-600 transition">
                        <i class="fas fa-unlock"></i>
                    </button>
                    <button type="button" onclick="showConfirmModal('delete')" title="Delete selected users"
                            class="px-4 py-2 border-2 border-red-500 text-red-500 rounded hover:border-red-600 hover:text-red-600 transition">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left">
                                    <input type="checkbox" id="selectAll" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Seen</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for user in users %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <input type="checkbox" name="users[]" value="{{ user.id }}" class="user-checkbox rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900">{{ user.name }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-500">{{ user.email }}</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {% if user.status == 'active' %}
                                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Active</span>
                                    {% elseif user.status == 'blocked' %}
                                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Blocked</span>
                                    {% else %}
                                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Unverified</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    {% if user.lastLoginAt %}
                                        {{ user.lastLoginAt|date('Y-m-d H:i:s') }}
                                    {% else %}
                                        Never
                                    {% endif %}
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="px-6 py-4 text-center text-gray-500">No users found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </form>
        </div>

        {% if totalPages > 1 %}
        <div class="mt-6 flex justify-center">
            <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                {% if page > 1 %}
                    <a href="?page={{ page - 1 }}&perPage={{ perPage }}" class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                {% else %}
                    <span class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                {% endif %}

                {% set startPage = max(1, page - 2) %}
                {% set endPage = min(totalPages, page + 2) %}

                {% if startPage > 1 %}
                    <a href="?page=1&perPage={{ perPage }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">1</a>
                    {% if startPage > 2 %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                    {% endif %}
                {% endif %}

                {% for p in startPage..endPage %}
                    {% if p == page %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-blue-500 bg-blue-50 text-sm font-medium text-blue-600">{{ p }}</span>
                    {% else %}
                        <a href="?page={{ p }}&perPage={{ perPage }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ p }}</a>
                    {% endif %}
                {% endfor %}

                {% if endPage < totalPages %}
                    {% if endPage < totalPages - 1 %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                    {% endif %}
                    <a href="?page={{ totalPages }}&perPage={{ perPage }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ totalPages }}</a>
                {% endif %}

                {% if page < totalPages %}
                    <a href="?page={{ page + 1 }}&perPage={{ perPage }}" class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                {% else %}
                    <span class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                        <i class="fas fa-chevron-right"></i>
                    </span>
                {% endif %}
            </nav>
        </div>
        {% endif %}
    </div>
</div>

<script>
document.getElementById('selectAll').addEventListener('change', function() {
    const checkboxes = document.querySelectorAll('.user-checkbox');
    checkboxes.forEach(cb => cb.checked = this.checked);
});

function changePerPage(value) {
    const url = new URL(window.location);
    url.searchParams.set('perPage', value);
    url.searchParams.set('page', '1');
    window.location = url;
}

let pendingAction = null;

function showConfirmModal(action) {
    const checked = document.querySelectorAll('.user-checkbox:checked');
    if (checked.length === 0) return;

    pendingAction = action;
    const modal = document.getElementById('confirmModal');
    const config = {
        block: {
            icon: 'mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100',
            iconClass: 'fas fa-ban text-yellow-600 text-xl',
            title: 'Block Users',
            message: 'Are you sure you want to block the selected users? They will not be able to access the system.',
            btnClass: 'bg-yellow-600 hover:bg-yellow-700'
        },
        unblock: {
            icon: 'mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100',
            iconClass: 'fas fa-unlock text-green-600 text-xl',
            title: 'Unblock Users',
            message: 'Are you sure you want to unblock the selected users? They will regain access to the system.',
            btnClass: 'bg-green-600 hover:bg-green-700'
        },
        delete: {
            icon: 'mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100',
            iconClass: 'fas fa-exclamation-triangle text-red-600 text-xl',
            title: 'Delete Users',
            message: 'Are you sure you want to delete the selected users? This action cannot be undone.',
            btnClass: 'bg-red-600 hover:bg-red-700'
        }
    };

    const c = config[action];
    document.getElementById('modalIcon').className = c.icon;
    document.getElementById('modalIconElement').className = c.iconClass;
    document.getElementById('modalTitle').textContent = c.title;
    document.getElementById('modalMessage').textContent = c.message;
    document.getElementById('modalConfirmBtn').className = `flex-1 px-4 py-2 text-white rounded-md ${c.btnClass}`;

    modal.showModal();
}

function closeModal() {
    document.getElementById('confirmModal').close();
    pendingAction = null;
}

function confirmAction() {
    if (pendingAction) {
        document.getElementById('confirmAction').value = pendingAction;
        document.getElementById('userForm').submit();
    }
}
</script>
{% endblock %}
